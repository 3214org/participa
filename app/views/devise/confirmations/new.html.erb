<% @title ||= t("devise.titles.confirmation_instructions") %>

<div class="col-md-5">
  <%= content_tag(:h2, t("devise.titles.confirmation_instructions")) %>
  <hr>
  <%= semantic_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
    <%= f.input :email, input_html: {autofocus: true} %>
    <%= f.actions do %>
      <%= f.action :submit, label: t("devise.buttons.confirmation_instructions"), button_html: {class: "btn btn-primary"} %>
    <% end %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
