<% @title ||= t("devise.titles.sign_up") %>

<div class="row">
  <div class="col-md-5">
    <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :first_name, required: true, input_html: {autofocus: true, required: true} %>
      <%= f.input :last_name, required: true, input_html: {required: true} %>
      <%= f.input :document_type, required: true, as: :radio, collection: User::DOCUMENTS_TYPE, input_html: {required: true} %>
      <%= f.input :document_vatid, required: true, input_html: {required: true} %>
      <%= f.input :born_at, required: true, as: :string, input_html: {required: true} %>
      <%= f.input :email, required: true, input_html: {required: true} %>
      <%= f.input :password, required: true, input_html: {required: true} %>
      <%= f.input :password_confirmation, required: true, input_html: {required: true} %>
      <%= f.input :wants_newsletter, required: true, input_html: {checked: 'checked'} %>
      <%= f.input :terms_of_service, as: :boolean, required: true %>
      <%= render partial: "terms_of_service" %>
      <%= f.actions do %>
        <%= f.action :submit, label: t("devise.buttons.sign_up"), button_html: {class: "btn btn-primary"} %>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
