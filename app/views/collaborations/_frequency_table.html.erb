<dl class="dl-horizontal">
  <dt>Importe</dt>
  <dd><%= number_to_euro @collaboration.amount %></dd>
  <dt>Frecuencia de pago</dt>
  <dd>cada <%= @collaboration.frequency * 30 %> días</dd>
  <dt>Método de pago</dt>
  <dd><%= @collaboration.payment_type_name %></dd>
  <% unless @collaboration.is_credit_card? %>
    <dt>Cuenta bancaria</dt>
    <dd>
    <% if @collaboration.is_bank_national? %>
      <%= @collaboration.ccc_full %>
    <% end %>
    <% if @collaboration.is_bank_international? %>
      IBAN: <%= @collaboration.iban_account %> <br>
      BIC: <%= @collaboration.iban_bic %>
    <% end %>
    </dd>
  <% end %>

</dl>

<% if @collaboration.frequency > 0 %>
<table class="table-collaborations">
  <caption class="invisible">Colaboraciones</caption>
  <thead>
    <th>Fecha de pago</th>
    <th>Importe</th>
  </thead>
  <tbody>
  <% freq = @collaboration.frequency_payments %>
  <% (1..(freq)).each_with_index do |f, i| %>
    <tr>
      <% if i == 0 %>
        <td> Del <%= l(@collaboration.created_at, format: :date) %> al <%= l(@collaboration.created_at + 5.days, format: :date) %></td>
        <td> <%= number_to_euro @collaboration.amount %> </td>
      <% else %>
        <td> Del <%= l(@collaboration.created_at + f.month - 5.days, format: :date) %> al <%= l(@collaboration.created_at + f.month + 5.days, format: :date) %> </td>
        <td> <%= number_to_euro @collaboration.amount %> </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Total</th>
      <th><%= number_to_euro((freq) * @collaboration.amount) %></th>
    </tr>
  </tfoot>
</table>
<% end %>

