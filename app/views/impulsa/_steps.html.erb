<nav class="steps">
  <ul>
    <li class="main<%= ' active' if "main"==step %>">
      <a href="<%=project_impulsa_path%>"><%= fa_icon "thumb-tack", text: "Proyecto"%> </a>
    </li>
    <% project.wizard_status.each do |sname, info| %>
      <li <%= 'class=active' if sname==step %>>
        <a href="<%=project_step_impulsa_path(step: sname)%>"><%= info[:title] %> <%= if info[:filled] && info[:errors]==0 then fa_icon("check-square-o", class: "ok") elsif !info[:filled] then fa_icon("square-o") else content_tag(:span, class: "errors") { info[:errors].to_s } end if info[:fields]>0 %></a>
      </li>
    <% end if project.persisted? %>
  </ul>
  <div></div>
</nav>