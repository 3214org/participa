<% content_for :title, "Ven a la Marcha del cambio" %>
<%= content_tag(:h2, "Ven a la Marcha del cambio") %>
<section class="tools">
<ul>
  <li class="box-tool">
  <div class="box-tool">
    <h3>Viaja a Madrid</h3>
    <div class="tool-text">
      <p>Traigamos juntos el cambio a Madrid el día 31 de enero.</p>
    </div><!--.tool-text-->
    <div class="buttonbox">
      <%= link_to "Comparte tu coche", share_car_path, class: "button" %>
      <%= link_to "Encuentra un viaje", find_car_path, class: "button" %>
    </div>
  </div><!--.box-tool-->
  </li>
  <li class="box-tool">
  <div class="box-tool">
    <h3>Duerme en Madrid</h3>
    <div class="tool-text">
      <p>Comparte sueños de cambio con otras personas con ganas de cambio.</p>
    </div><!--.tool-text-->
    <div class="buttonbox">
      <%= link_to "Comparte tu casa", offer_hospitality_path, class: "button" %>
      <%= link_to "Encuentra alojamiento", find_hospitality_path, class: "button" %>
    </div><!--.buttonbox-->
  </div><!--.box-tool-->
  </li>
</ul>
</section>
