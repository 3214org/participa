<%= Arbre::Context.new({}, self) do
  form method: :post do
    table do
      loans.each do |block, info|
        info.each do |line|
          tr do
            th "Banco"
            th line[:movement][:concept][0..37]
            th line[:movement][:concept][38..-1]
            th number_to_euro(line[:movement][:amount]*100)
            th line[:movement][:reference_1]
          end
          if line[:loans]
            line[:loans].each do |loan|
              tr do
                th "SuscripciÃ³n"
                td "#{loan.first_name} #{loan.last_name}"
                td link_to(loan.id, admin_microcredit_loan_path(loan.id))
                td number_to_euro(loan.amount*100)
                td input(type: :checkbox, value: loan.id, checked: (block==:sure), name: "collection_selection[]")
              end
            end
          end
        end
      end
    end
  end
end %>
