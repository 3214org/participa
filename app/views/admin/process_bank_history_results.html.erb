<%= Arbre::Context.new({}, self) do
  form method: :post do
    table do
      tr do
        th "Concepto<br/>Nombre Suscripción".html_safe
        th "&nbsp;<br/>Id Suscripción".html_safe
        th "Total".html_safe
        th "Referencia Banco<br/>¿Confirmar?".html_safe
      end

      loans.each do |block, info|
        info.each do |line|
          tr do
            td colspan: 2 do
              line[:movement][:concept]
            end
            td line[:movement][:amount]
            td line[:movement][:reference_1]
          end
          if line[:loans]
            line[:loans].each do |loan|
              tr do
                td "#{loan.first_name} #{loan.last_name}"
                td link_to(loan.id, admin_microcredit_loan_path(loan.id))
                td loan.amount
                td input(type: :checkbox, value: loan.id, checked: (block==:sure), name: "collection_selection[]")
              end
            end
          end
        end
      end
    end
  end
end %>
