<div class="header">

  <div class="header-content">

    <div class="col-h-1a3">
      <figure class="logo">
        <a href="/">
          <h1>
            <%= image_tag "logo.podemos-220-w.png", alt: "PODEMOS" %>
          </h1>
        </a>
      </figure>
    </div><!--col-h-1-->

    <% if user_signed_in? %>

    <div class="col-h-4a12">
      <nav class="menu" id="top_menu">
        <ul>
          <li class="menu-hamb">
            <a id="hamburger_menu" href="#">
              <span>Menú</span>
            </a>
          </li>
          <li class="menu-logout">
            <%= nav_menu_link_to "Salir", destroy_user_session_path, [destroy_user_session_path], method: :delete %>
          </li>
          <li class="menu-tools">
            <%= nav_menu_link_to "Herramientas", root_path, [root_path] %>
          </li>
          <li class="menu-notif">
            <%= nav_menu_link_to "Avisos", admin_notices_path, [admin_notices_path], class: new_notifications_class %>
          </li>
          <li class="menu-econ">
            <%# TODO add route %>
            <%= nav_menu_link_to "Colaboración económica", root_path, [root_path] %>
          </li>
          <li class="menu-profile">
            <%= nav_menu_link_to "Perfil", edit_admin_user_path(current_user), [edit_admin_user_path(current_user)] %>
          </li>
          <li class="menu-name">
            <% link_to edit_admin_user_path(current_user) do %>
              <span class="name">
                <%= current_user.try(:first_name) %>
              </span>
              <span class="surname">
                <%= current_user.try(:last_name) %>
              </span>
            <% end %>
          </li>
        </ul>
      </nav><%#.menu%>
    </div><%#.col-h-2a4%>
    <%= render partial: 'sidr_menu' %>
    <% end %>

  </div><!--.header-content-->
</div><!--#header-->
